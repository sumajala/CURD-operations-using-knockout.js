@model knockoutCURD.Models.Store

@{
    ViewBag.Title = "Delete";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<div id="delete-store">
    <h4>Store</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.StoreID)</dt>
        <dd data-bind="text: selectedStore.StoreID"></dd>
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd data-bind="text: selectedStore.Name"></dd>
        <dt>@Html.DisplayNameFor(model => model.Address)</dt>
        <dd data-bind="text: selectedStore.Address"></dd>
    </dl>
    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "delete-store-form", action = "javascript:void(0);" }))
    {
        @Html.AntiForgeryToken()
        <input hidden data-bind="value: selectedStore.StoreID" id="StoreID" name="StoreID" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-success" data-bind="click: deleteConfirmed" />
        </div>
    }
</div>